{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5" x-data="registerForm()">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Register</h2>
      <div id="message" x-html="message"></div>
      <form @submit.prevent="submit">
        <div class="mb-3">
          <label class="form-label">Username</label>
          <input id="username" name="username" class="form-control" x-model="username" required />
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input id="email" name="email" type="email" class="form-control" x-model="email" required />
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input id="password" name="password" type="password" class="form-control" x-model="password" required />
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
        <a href="/admin" class="btn btn-link">Already have an account?</a>
      </form>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="/js/admin/register.js"></script>
{% endblock %}
